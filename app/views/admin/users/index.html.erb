<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
     	<%= link_to user.email, user_path(user) %> 
     	<%= gravatar_for(user) %>
     	<%= link_to "Delete", admin_user_path(user), method: :delete, class: "delete-user", data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= paginate @users %>
