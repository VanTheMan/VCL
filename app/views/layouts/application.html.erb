<!DOCTYPE html>
<html>
<head>
  <title>VCL</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<% if notice %>
			<p class="alert alert-success"><%= notice %></p>
		<% elsif alert %>
			<p class="alert alert-error"><%= alert %></p>
		<% end %>
		<%= yield %>
		<%= render 'layouts/footer' %>
	</div>
</body>
</html>
