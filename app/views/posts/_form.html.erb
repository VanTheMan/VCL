<%= form_for @post, :html => { id: "post_form" } do |f| %>
  <%= render 'shared/error', object: f.object %>

  <div class="field">
     <%= f.text_area :content, placeholder: "Post something........", rows: 3, cols: 30 %>
  </div>
  <div class="actions">
    <%= f.submit "Post", class: "btn" %>
  </div>
<% end %>
